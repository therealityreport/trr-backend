# Copy this file to .env and fill in real values.
# Never commit .env (only .env.example is tracked).

# ----------------------------
# Core pipeline configuration
# ----------------------------

# Google Sheets (required)
SPREADSHEET_NAME=Realitease2025Data
SPREADSHEET_ID=your_google_sheet_id
GOOGLE_APPLICATION_CREDENTIALS=keys/service-account.json
# Optional alias used by some scripts
GOOGLE_SERVICE_ACCOUNT_FILE=

# API Keys
TMDB_API_KEY=your_tmdb_api_key
# Optional: TMDb v4 bearer token (if set, some scripts prefer this over TMDB_API_KEY)
TMDB_BEARER=
TMDB_LIST_ID=
THETVDB_API_KEY=

IMDB_API_KEY=your_imdb_api_key
IMDB_LIST_URL=https://www.imdb.com/list/your_list_id/

# Gemini / Google AI
GEMINI_API_KEY=your_gemini_api_key
# Optional aliases used by some scripts
GOOGLE_GEMINI_API_KEY=
GOOGLE_GEMINI_MODEL=gemini-2.5-flash
GEMINI_MODEL=

# Optional tuning
REALITEASE_TMDB_SHOW_LIMIT=5

# Firebase (optional)
FIREBASE_SERVICE_ACCOUNT_FILE=keys/firebase-admin-service-account.json

# ----------------------------
# Database / core schema tools
# ----------------------------
TRR_DB_URL=postgresql://postgres:postgres@localhost:5432/trr
PGHOST=localhost
PGPORT=5432
PGDATABASE=trr
PGUSER=postgres
PGPASSWORD=
PGSSLMODE=require

# ----------------------------
# Supabase (future direction)
# ----------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_DB_URL=postgresql://user:password@db.your-project.supabase.co:5432/postgres
